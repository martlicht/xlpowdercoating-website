---
import { Image } from "astro:assets";
import backgroundImage from "../assets/images/background3.webp";
import ServiceCard from "./ServiceCard.astro";
import sprayPowder from "../assets/images/SPRAY.webp";
import tintIcon from "../assets/icons/tint-icon.svg";
import refreshIcon from "../assets/icons/refresh-icon.svg";
import spraying2 from "../assets/images/spraying2.webp";
---

<section
  id="services"
  class="relative min-h-screen items-center py-20 px-4 md:px-8 lg:px-16 font-sans overflow-hidden"
>
  <!-- Background Image -->
  <div class="absolute inset-0 z-0" aria-hidden="true">
    <Image
      src={backgroundImage}
      alt="XL Industrial Powder Coating services background"
      width={1920}
      height={1080}
      format="webp"
      quality={80}
      class="w-full h-full object-cover"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-black/70 z-10"></div>
  </div>

  <!-- Content Container -->
  <div
    class="relative z-20 w-full px-8 md:px-12 lg:px-16 xl:px-24 flex flex-col items-center text-center"
  >
    <!-- Small Label -->
    <p
      class="text-sm md:text-base uppercase tracking-wider text-white/80 font-sans"
    >
      Services
    </p>

    <!-- Main Title -->
    <h2
      class="text-4xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-6xl font-bold uppercase leading-tight italic text-white mb-6 md:mb-8 font-sans max-w-5xl"
      data-aos="fade-up"
      data-aos-duration="500"
    >
      COMPLETE COATING SOLUTIONS<br /> FOR INDUSTRIAL PARTS
    </h2>

    <!-- Description -->
    <p
      class="text-base sm:text-base md:text-lg lg:text-xl text-white/90 max-w-3xl leading-relaxed font-sans"
    >
      We handle steel, aluminum, and everything in between. From surface prep to
      final finish, we've got the equipment and expertise to get it right.
    </p>
  </div>
  <div class="relative z-20 w-full px-8 md:px-12 lg:px-16 xl:px-24 py-12">
    <div class="flex gap-4 justify-center">
      <div class="flex flex-col gap-4">
        <div>
          <ServiceCard
            label="Capabilities"
            title="Powder coating for steel, aluminum and specialty metals"
            description="High-performance finishes that withstand harsh industrial environments and demanding applications."
            imageSrc={sprayPowder}
            linkText="Get info"
            linkHref="#contact"
          />
        </div>
        <div>
          <ServiceCard
            title="Custom color matching and specialty finishes"
            description="RAL colors, gloss, matte, metallic. We match your specs or create something new entirely."
            iconSrc={refreshIcon}
            linkText="Get info"
            linkHref="#contact"
          />
        </div>
      </div>
      <div class="flex flex-col gap-4">
        <div>
          <ServiceCard
            title="Touch-ups and recoating services"
            description="Existing parts need refreshing? We handle repairs and full recoating jobs with the same precision."
            iconSrc={tintIcon}
            linkText="Get info"
            linkHref="#contact"
          />
        </div>
        <div>
          <ServiceCard
            label="Finishes"
            title="Sandblasting and surface preparation"
            description="Clean substrate means better adhesion. We prepare every part properly before coating begins."
            imageSrc={spraying2}
            linkText="Get info"
            linkHref="#contact"
          />
        </div>
      </div>
    </div>
  </div>
</section>
