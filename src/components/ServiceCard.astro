---
import { Image } from "astro:assets";

interface Props {
  label?: string;
  title: string;
  description: string;
  imageSrc?: ImageMetadata;
  iconSrc?: ImageMetadata;
  linkText?: string;
  linkHref?: string;
}

const {
  label,
  title,
  description,
  imageSrc,
  iconSrc,
  linkText = "Get info",
  linkHref = "#",
} = Astro.props;

const hasImage = !!imageSrc;
const hasIcon = !!iconSrc;
---

<div
  class={`service-card bg-[#fff9ed] rounded-lg border-none overflow-hidden transition-all duration-300 hover:shadow-lg ${
    hasImage ? "service-card-expanded" : "service-card-collapsed"
  }`}
  style={hasImage ? "max-width: 624px; max-height: 729px;" : "max-width: 624px; max-height: 340px;"}
>
  {hasImage ? (
    <!-- Expanded Card with Image -->
    <div class="flex flex-col h-full">
      <!-- Image Section - Top -->
      {imageSrc && (
        <div class="w-full h-64 md:h-80 lg:h-96 relative shrink-0">
          <Image
            src={imageSrc}
            alt={title}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      )}
      
      <!-- Content Section - Bottom -->
      <div class="flex-1 bg-[#fff9ed] p-6 md:p-8 lg:p-10 flex flex-col justify-between ">
        {label && (
          <p class="text-xs md:text-sm uppercase tracking-wider text-gray-600 mb-3 font-sans font-semibold">
            {label}
          </p>
        )}
        
        <div class="flex-1">
          <h3 class="text-xl md:text-2xl lg:text-3xl font-bold uppercase text-gray-900 mb-3 md:mb-4 leading-tight font-sans">
            {title}
          </h3>
          
          <p class="text-sm md:text-base lg:text-lg text-gray-700 leading-relaxed font-sans mb-4 md:mb-6">
            {description}
          </p>
        </div>
        
        <a
          href={linkHref}
          class="inline-flex items-center gap-2 text-[#DC2626] hover:text-[#B91C1C] font-semibold text-sm md:text-base transition-colors font-sans group mt-auto"
          aria-label={`${linkText} for ${title}`}
        >
          {linkText}
          <span class="group-hover:translate-x-1 transition-transform">→</span>
        </a>
      </div>
    </div>
  ) : (
    <!-- Collapsed Card with Icon -->
    <div class="p-6 md:p-8 flex flex-col gap-4 h-full">
      {hasIcon && (
        <div class="mb-4 md:mb-8">
          <Image
            src={iconSrc}
            alt=""
            class="w-6 h-6 md:w-8 md:h-8"
            width={48}
            height={48}
            aria-hidden="true"
          />
        </div>
      )}
      
      <h3 class="text-xl md:text-2xl lg:text-3xl font-bold uppercase text-gray-900 mb-3 md:mb-4 leading-tight font-sans">
        {title}
      </h3>
      
      <p class="text-sm md:text-base text-gray-700 leading-relaxed font-sans mb-6 md:mb-8 flex-1">
        {description}
      </p>
      
      <a
        href={linkHref}
        class="inline-flex items-center gap-2 text-[#DC2626] hover:text-[#B91C1C] font-semibold text-sm md:text-base transition-colors font-sans group"
        aria-label={`${linkText} for ${title}`}
      >
        {linkText}
        <span class="group-hover:translate-x-1 transition-transform">→</span>
      </a>
    </div>
  )}
</div>

<style>
  .service-card {
    max-width: 954px;
    max-height: 729px;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .service-card-expanded {
    min-height: 500px;
  }

  @media (min-width: 1024px) {
    .service-card-expanded {
      min-height: 600px;
    }
  }

  .service-card-collapsed {
    min-height: 300px;
    max-height: 340px;
  }

  @media (min-width: 1024px) {
    .service-card-collapsed {
      min-height: 300px;
      max-height: 340px;
    }
  }

  /* Asegurar que los márgenes funcionen correctamente */
  .service-card p {
    margin-bottom: 1.5rem !important;
  }

  @media (min-width: 768px) {
    .service-card p {
      margin-bottom: 2rem !important;
    }
  }

  .service-card h3 {
    margin-bottom: 0.75rem !important;
  }

  @media (min-width: 768px) {
    .service-card h3 {
      margin-bottom: 1rem !important;
    }
  }
</style>

