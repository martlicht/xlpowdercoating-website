---
import { Image } from 'astro:assets';
import backgroundImage from '../assets/images/background2.webp';
---

<section id="about" class="relative min-h-screen flex items-center py-20 px-4 md:px-8 lg:px-16 font-sans overflow-hidden">
	<!-- Background Image -->
	<div class="absolute inset-0 z-0" aria-hidden="true">
		<Image
			src={backgroundImage}
			alt="XL Industrial Powder Coating facility with large-scale manufacturing equipment"
			width={1920}
			height={1080}
			format="webp"
			quality={80}
			class="w-full h-full object-cover"
			loading="eager"
			fetchpriority="high"
		/>
		<div class="absolute inset-0 bg-black/60 z-10"></div>
	</div>

	<!-- Content Container -->
	<div class="relative z-20 w-full px-8 md:px-12 lg:px-16 xl:px-24 grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 xl:gap-24 items-center">
		<!-- Left Section -->
		<header class="text-white features-header" data-aos="fade-right" data-aos-duration="500">
			<p class="text-sm md:text-base uppercase tracking-wider text-white/80 font-sans">
				Proven
			</p>
			
			<h2 class="text-6xl md:text-6xl lg:text-6xl xl:text-6xl font-bold uppercase leading-none italic font-sans">
				<span>BUILT TO HANDLE</span>
				<span class="text-[#DC2626]">THE BIGGEST</span>
				<span class="text-[#DC2626]">JOBS</span>
			</h2>
			
			<p class="text-base md:text-lg text-white/90 max-w-lg font-sans leading-relaxed">
				We've earned the trust of manufacturers across industries. Our capacity and reliability speak for themselves.
			</p>
			
			<a
				href="#contact"
				class="inline-block bg-white/10 hover:bg-[#DC2626] text-white w-48 px-8 py-4 rounded-lg font-semibold transition-colors font-sans text-center"
				aria-label="Get started with XL Industrial Powder Coating services"
			>
				Get started
			</a>
		</header>

		<!-- Right Section - Stats Grid -->
		<dl class="grid grid-cols-2 gap-8 md:gap-10 lg:gap-12" data-aos="fade-left" data-aos-duration="500" itemscope itemtype="https://schema.org/Organization">
			<!-- Stat 1: 30-foot OVEN CAPACITY -->
			<div class="text-white border-l-4 border-white/40 pl-5 md:pl-7 font-sans">
				<dt class="sr-only">Oven Capacity</dt>
				<dd class="stat-number font-black uppercase leading-none mb-3" itemprop="description">
					<span class="block"><span class="stat-digits" itemprop="value">30</span>-FOOT</span>
					<span class="block text-sm md:text-base font-medium tracking-widest text-white/90 mt-2">OVEN CAPACITY</span>
				</dd>
			</div>

			<!-- Stat 2: 48-hour TURNAROUND TIME -->
			<div class="text-white border-l-4 border-white/40 pl-5 md:pl-7 font-sans">
				<dt class="sr-only">Turnaround Time</dt>
				<dd class="stat-number font-black uppercase leading-none mb-3" itemprop="description">
					<span class="block"><span class="stat-digits" itemprop="value">48</span>-HOUR</span>
					<span class="block text-sm md:text-base font-medium tracking-widest text-white/90 mt-2">TURNAROUND TIME</span>
				</dd>
			</div>

			<!-- Stat 3: Multi-industry TRUSTED PARTNER -->
			<div class="text-white border-l-4 border-white/40 pl-5 md:pl-7 font-sans">
				<dt class="sr-only">Industry Coverage</dt>
				<dd class="stat-number font-black uppercase leading-none mb-3" itemprop="description">
					<span class="block">MULTI-INDUSTRY</span>
					<span class="block text-sm md:text-base font-medium tracking-widest text-white/90 mt-2">TRUSTED PARTNER</span>
				</dd>
			</div>

			<!-- Stat 4: 20+ years OF EXPERTISE -->
			<div class="text-white border-l-4 border-white/40 pl-5 md:pl-7 font-sans">
				<dt class="sr-only">Years of Experience</dt>
				<dd class="stat-number font-black uppercase leading-none mb-3" itemprop="description">
					<span class="block"><span class="stat-digits" itemprop="value">20</span>+ YEARS</span>
					<span class="block text-sm md:text-base font-medium tracking-widest text-white/90 mt-2">OF EXPERTISE</span>
				</dd>
			</div>
		</dl>
	</div>
</section>

<style>
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}

	.features-header {
		display: flex;
		flex-direction: column;
	}

	.features-header > p:first-of-type {
		margin-bottom: 1rem !important;
		margin-top: 0 !important;
	}

	.features-header > h2 {
		margin-bottom: 1.5rem !important;
		margin-top: 0 !important;
	}

	.features-header > p:nth-of-type(2) {
		margin-bottom: 2rem !important;
		margin-top: 0 !important;
	}

	.features-header > a {
		margin-top: 0 !important;
	}

	.stat-number {
		font-family: "Poppins", system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif !important;
		font-weight: 900;
		letter-spacing: -0.03em;
		word-break: keep-all;
		line-height: 1.1;
		font-size: clamp(1.5rem, 3.5vw, 2.5rem);
	}
	
	.stat-digits {
		font-family: "Poppins", system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif !important;
		font-weight: 900;
		letter-spacing: -0.03em;
		font-size: 1.1em;
		display: inline-block;
	}
	
	@media (min-width: 768px) {
		.stat-number {
			font-size: clamp(1.75rem, 4vw, 3rem);
		}
		
		.stat-digits {
			font-size: 1.15em;
		}
	}
	
	@media (min-width: 1024px) {
		.stat-number {
			font-size: clamp(2rem, 4.5vw, 3.5rem);
		}
		
		.stat-digits {
			font-size: 1.2em;
		}
	}
	
	@media (min-width: 1280px) {
		.stat-number {
			font-size: clamp(2.25rem, 5vw, 4rem);
		}
		
		.stat-digits {
			font-size: 1.25em;
		}
	}
</style>

