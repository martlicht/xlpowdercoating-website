---
import backgroundVideo from '../assets/xl-hero-video.webm';

const videoSrc = typeof backgroundVideo === 'string' ? backgroundVideo : (backgroundVideo as any).src || backgroundVideo;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-16 sm:pt-20 md:pt-[80px] font-sans">
	<!-- Video Background -->
	<video 
		autoplay 
		loop 
		muted 
		playsinline
		class="absolute inset-0 w-full h-full object-cover z-0"
		preload="none"
	>
		<source src={videoSrc} type="video/mp4" />
	</video>

	<!-- Overlay for better text readability -->
	<div class="absolute inset-0 bg-black/40 z-10"></div>

	<!-- Content -->
	<div class="relative z-20 px-4 sm:px-6 md:px-12 lg:px-24 py-8 sm:py-12 md:py-16 text-center flex flex-col items-center justify-center min-h-screen gap-4 sm:gap-5 md:gap-6">
		<h1 
			class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl 2xl:text-7xl font-bold text-white uppercase leading-none sm:leading-tight px-2 sm:px-4 italic"
			data-aos="fade-up"
			data-aos-duration="500"
		>
			INDUSTRIAL POWDER COATING<br />
			BUILT FOR SCALE
		</h1>

		<p 
			class="text-base sm:text-lg md:text-xl lg:text-2xl text-white max-w-5xl mx-auto px-2 sm:px-4 font-sans mt-2 sm:mt-3 md:mt-4"
			data-aos="fade-up"
			data-aos-delay="100"
		>
			Fast turnaround. Biggest oven in the Region. High-performance finishes.
		</p>

		<!-- Email Subscription Form -->
		<form 
			class="flex flex-col sm:flex-row gap-3 sm:gap-4 max-w-xl mx-auto w-full px-2 sm:px-4 font-sans"
			data-aos="fade-up"
			data-aos-delay="200"
		>
			<input
				type="email"
				placeholder="Your email address"
				required
				class="flex-1 min-w-0 px-4 py-3 sm:py-2 rounded-lg bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder:text-white/60 focus:outline-none focus:ring-2 focus:ring-white/50 font-sans text-sm sm:text-base"
			/>
			<button
				type="submit"
				class="bg-white text-black px-6 sm:px-8 py-3 sm:py-4 rounded-lg font-semibold hover:bg-white/90 transition-colors whitespace-nowrap shrink-0 font-sans text-sm sm:text-base"
			>
				Get in touch
			</button>
		</form>

		<!-- Privacy Message -->
		<p 
			class="text-xs sm:text-sm text-white/80 px-2 sm:px-4 font-sans max-w-md mx-auto"
			data-aos="fade-up"
			data-aos-delay="300"
		>
			We respect your inbox. Unsubscribe anytime without question.
		</p>
	</div>
</section>

