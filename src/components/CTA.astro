---
import { Image } from "astro:assets";
import backgroundImage from "../assets/images/background5.webp";
---

<section
  class="relative min-h-screen/2 flex items-center py-20 px-4 md:px-8 lg:px-16 font-sans overflow-hidden"
>
  <!-- Background Image -->
  <div class="absolute inset-0 z-0" aria-hidden="true">
    <Image
      src={backgroundImage}
      alt="XL Industrial Powder Coating call to action background"
      format="webp"
      quality={80}
      class="w-full h-full object-cover"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-black/80 z-10"></div>
  </div>

  <!-- Content Container -->
  <div
    class="relative z-20 w-full px-8 md:px-12 lg:px-16 xl:px-24 flex flex-col items-center text-center"
  >
    <!-- Main Title -->
    <h2
      class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold uppercase leading-tight text-white mb-6 md:mb-2 font-sans max-w-5xl italic"
      data-aos="fade-up"
      data-aos-duration="500"
    >
      READY FOR YOUR NEXT<br />
      PROJECT?
    </h2>

    <!-- Subheading -->
    <p
      class="text-base sm:text-lg md:text-xl lg:text-2xl text-white/90 max-w-3xl leading-relaxed font-sans"
      data-aos="fade-up"
      data-aos-duration="500"
      data-aos-delay="100"
    >
      Get in touch. We'll handle the rest.
    </p>
  </div>
</section>
